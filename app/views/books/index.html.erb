<table class="table table-condensed">
  <thead>
    <tr>
      <td>Title</td>
      <td>Author</td>
      <td><!-- More info --></td>
      <td><!-- Download --></td>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author.name %></td>
        <td><%= button_to "More info", book, method: :get, class: 'btn btn-secondary' %></td>
        <td><%= button_to "Download", download_path(id: book.id), method: :get, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
